{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Toolkit",
            "type": "shell",
            "command": "./Build-Toolkit",
            "options": {
                "cwd": "${workspaceFolder}/src/scripts",
            },
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "label": "Test.All",
                "isDefault": false,
            },
            "isBackground": false,
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false,
            }
        },
        {
            "label": "Test.All",
            "type": "shell",
            "problemMatcher": [ "$msCompile" ],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "command": ". '${workspaceRoot}/.build/start.ps1' -Task Test.All"
        },
    ]
}